#:kivy 2.1

ForgetPassword:
    name: 'forget'
    id: forget_screen  
    MDFloatLayout:
        Image:
            source: 'assets\screen_forget.png'
            allow_stretch: True
            keep_ratio: False
        MDCard:
            md_bg_color: rgba(255, 255, 255, 255)
            size_hint: .9, .45
            pos_hint: {"center_x": .5,"center_y": .64}
            elevation: 4
            shadow_softness: 8
            shadow_offset: (-2, 2)
            MyCarousel:
                id: MyCarousel
                MDFloatLayout:
                    MDLabel:
                        text: "Vui lòng nhập tài khoản"
                        pos_hint: {"center_x": .6,"center_y": .55}
                    MDTextField:
                        hint_text: "Tên người dùng/Email"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .45}
                    MDFlatButton:
                        md_bg_color: rgba(204, 204, 204,255)
                        text: "Tiếp"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .15}
                        md_bg_color: rgba(204, 204, 204,255)
                        on_release: 
                            MyCarousel.load_next()
                            Submit.text_color = rgba(252, 200, 115, 255)
                            Submit.icon = "check-circle-outline"
                            first_bar.value = 50
                            first_bar.color =  rgba(252, 200, 115, 255)
                MDFloatLayout:
                    MDLabel:
                        text: "Vui lòng nhập mã xác nhận Email"
                        pos_hint: {"center_x": .5,"center_y": .50}
                        halign: "center"
                    MDLabel:
                        text: "*****@gmail.com"
                        pos_hint: {"center_x": .5,"center_y": .45}
                        halign: "center"
                        color: rgba(204, 204, 204,255) 
                    MDTextField:
                        hint_text: "Mã xác nhận"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .33}
                    MDFlatButton:
                        text: "Tiếp"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .15}
                        md_bg_color: rgba(204, 204, 204,255)
                        on_release: 
                            MyCarousel.load_next()
                            confirm.text_color = rgba(252, 200, 115, 255)
                            confirm.icon = "check-circle-outline"
                            first_bar.value = 100
                            first_bar.color =  rgba(252, 200, 115, 255)
                            second_bar.value = 50
                            second_bar.color =  rgba(252, 200, 115, 255)
                MDFloatLayout:
                    MDLabel:
                        text: "Vui lòng thiết lập lại mật khẩu mới cho tài khoản  Nguyen****@gmail.com"
                        size_hint_x: .65
                        pos_hint: {"center_x": .42,"center_y": .63}
                        font_size: '13sp' 
                    MDTextField:
                        hint_text: "Nhập mật khẩu mới"
                        password: True
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .5}
                    MDTextField:
                        hint_text: "Xác nhận lại mật khẩu"
                        password: True
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .36}
                    MDFlatButton:
                        text: "Xác Nhận"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .15}
                        md_bg_color: rgba(204, 204, 204,255)
                        on_release: 
                            MyCarousel.load_next()
                            reset.text_color = rgba(252, 200, 115, 255)
                            reset.icon = "check-circle-outline"
                            second_bar.value = 100
                            second_bar.color =  rgba(252, 200, 115, 255)
                MDFloatLayout:
                    MDIconButton:
                        icon: "check-circle-outline"
                        pos_hint: {"center_x": .5,"center_y": .5}
                        icon_size: "80sp"
                        theme_text_color: "Custom"
                        text_color: rgba(252, 200, 115, 255)
                    MDFlatButton:
                        text: "Đăng Nhập"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .25} 
                        md_bg_color: rgba(204, 204, 204,255)
                        on_release: 
                            app.root.current = "home"
                            root.manager.transition.direction = "left"
        MDLabel:
            text: "Quên Mật Khẩu"
            halign: "center"
            bold: True
            pos_hint: {"center_x": .5,"center_y": .83}
            font_size: '29sp'

        MDLabel:
            text: "nhập tài khoản"
            pos_hint: {"center_x": .6,"center_y": .75} 
            font_size: '12sp' 
            theme_text_color: "Custom"  
        MDIconButton:
            id: Submit
            icon: "numeric-1-circle-outline"
            pos_hint: {"center_x": .20,"center_y": .78} 
            user_font_size: "35sp"
            theme_text_color: "Custom" 
            text_color: rgba(204, 204, 204,255)
            # size: dp(500), dp(500)
        MDProgressBar:
            id: first_bar
            size_hint_x: .2
            pos_hint: {"center_x": .35,"center_y": .78} 
        


        MDLabel:
            text: "xác minh bảo mật"
            halign: "center"
            pos_hint: {"center_x": .5,"center_y": .75} 
            font_size: '12sp'   
        MDIconButton:
            id: confirm
            icon: "numeric-2-circle-outline"
            pos_hint: {"center_x": .5,"center_y": .78} 
            user_font_size: "35sp"
            theme_text_color: "Custom" 
            text_color: rgba(204, 204, 204,255)
            # size: dp(500), dp(500)
        MDProgressBar:
            id: second_bar
            size_hint_x: .2
            pos_hint: {"center_x": .65,"center_y": .78} 


        MDLabel:
            text: "Thiết lập mật khẩu"
            pos_hint: {"center_x": 1.15,"center_y": .75} 
            font_size: '12sp'   
        MDIconButton:
            id: reset
            icon: "numeric-3-circle-outline"
            pos_hint: {"center_x": .80,"center_y": .78} 
            user_font_size: "35sp"
            theme_text_color: "Custom"
            text_color: rgba(204, 204, 204,255) 
            # size: dp(500), dp(500)

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": .1,"center_y": .95} 
            icon_size: "50sp"
            theme_text_color: "Custom" 
            text_color: rgba(252, 200, 115, 255)
            on_release: 
                MyCarousel.previous()

        
                    
