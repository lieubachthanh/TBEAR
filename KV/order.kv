#:kivy 2.1

order: 
    id: order
    name: 'order'
    MDFloatLayout:
        MDCard:
            md_bg_color: rgba(255, 255, 255, 255)
            size_hint: .9, .55
            pos_hint: {"center_x": .5,"center_y": .55}
            elevation: 1
            MyCarousel:
                id: myCarousel
                MDFloatLayout:
                    MDLabel:
                        text: "Booking dịch vụ truyền thông"
                        halign: "center"
                        bold: True
                        pos_hint: {"center_x": .5,"center_y": .85}
                        font_size: '20sp'
                    MDLabel:
                        text: "TBEAR chúng mình sẽ liên hệ với bạn dựa vào thông tin bạn cung cấp"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .75}
                        halign: "center"
                        theme_text_color: 'Custom'
                        font_size: '15sp'
                        text_color: rgba(204, 204, 204, 255)
                    MDTextField:
                        hint_text: "Khu vực cho thuê"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .6}
                    MDTextField:
                        hint_text: "tên người thuê"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .48}
                    MDTextField:
                        hint_text: "số điện thoại"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .36}
                    MDTextField:
                        hint_text: "Dịch vụ Booking/Combo"
                        size_hint_x: .8
                        mode: "rectangle"
                        pos_hint: {"center_x": .5,"center_y": .24}
                    MDFlatButton:
                        text: "Đăng ký với TBEAR"
                        size_hint_x: .8
                        pos_hint: {"center_x": .5,"center_y": .1}
                        md_bg_color: rgba(204, 204, 204,255)
                    
