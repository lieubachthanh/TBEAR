<Spacer@Widget>
    size_hint_y: None
    height: '15dp'


<CardPhim@RelativeLayout>
     
    size_hint_y: None
    MDCard:
        md_bg_color: rgba(0, 0, 0,0)
        MDFloatLayout:
            id: phim
            MDIconButton:
                icon: "assets\Phim.png"
                icon_size: "80sp"
                pos_hint: {'center_x': .15, "center_y": .5}
            MDLabel:
                text: "PHIM"
                bold: True
                theme_text_color: 'Custom'
                font_size: '25sp'
                text_color: rgba(255, 255, 255, 255)
                pos_hint: {'center_x': .4, "center_y": .75}
                size_hint_x: .2
            MDLabel:
                text: "Tạo nên những thước phim ấn tượng"
                pos_hint: {'center_x': .55, "center_y": .4}
                size_hint_x: .5
            MDIconButton:
                id: button 
                icon: "arrow-down-drop-circle-outline"
                icon_size: "40sp"
                pos_hint: {'center_x': .9, "center_y": .5}
                theme_text_color: 'Custom'
                text_color: rgba(255, 255, 255, 255)
                on_release: 
                    home.bottom_sheet.open() \
                    if home.bottom_sheet.state == "close" else \
                    home.bottom_sheet.dismiss()
            

            
